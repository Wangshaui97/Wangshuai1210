<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.BannerFragment">

    <TextView
        android:id="@+id/qrcode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="【-】扫一扫"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintRight_toLeftOf="@id/input"
        />
    <EditText
        android:id="@+id/input"
        android:layout_width="500dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/qrcode"
        />

    <com.youth.banner.Banner
        android:id="@+id/banne"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.bawei.wangshuai12102.view.HorizontalView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/banne"
        android:layout_marginTop="20dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="这里是横向滚动视图,这里是横向滚动视图,这里是横向滚动视图,
        这里是横向滚动视图,这里是横向滚动视图,这里是横向滚动视图,"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18sp"
        />



</android.support.constraint.ConstraintLayout>